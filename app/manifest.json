{
  "name": "__MSG_appName__",
  "short_name": "BigTube",
  "version": "3.0.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "constants/storage-keys.js",
      "scripts/bigtube.js",
      "scripts/pip.js",
      "scripts/twitch.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "cookies",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": {},
    "default_title": "Bigtube"
  }
}
